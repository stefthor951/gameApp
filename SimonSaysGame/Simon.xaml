<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SimonSaysGame.Simon">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="200"/>
				<RowDefinition Height="200"/>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="40"/>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="40"/>
			</Grid.ColumnDefinitions>

			<Button x:Name="greenButton" Clicked="greenButtonClick" Grid.Row="2" Grid.Column="1" BackgroundColor="Green"/>
			<Button x:Name="redButton" Clicked="redButtonClick" Grid.Row="2" Grid.Column="2" BackgroundColor="Red"/>
			<Button x:Name="blueButton" Clicked="blueButtonClick" Grid.Row="3" Grid.Column="1" BackgroundColor="Blue"/>
			<Button x:Name="yellowButton" Clicked="yellowButtonClick" Grid.Row="3" Grid.Column="2" BackgroundColor="Yellow"/>
		</Grid>
	</ContentPage.Content>
</ContentPage>
